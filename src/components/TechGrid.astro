---
import AngularIcon from "./icons/Angular.astro";
import AstroIcon from "./icons/Astro.astro";
import BootstrapIcon from "./icons/Bootstrap.astro";
import CSSIcon from "./icons/Css.astro";
import DockerIcon from "./icons/Docker.astro";
import NodejsIcon from "./icons/Nodejs.astro";
import DotnetIcon from "./icons/Dotnet.astro";
import GithubIcon from "./icons/GitHub.astro";
import HtmlIcon from "./icons/Html.astro";
import JavaIcon from "./icons/Java.astro";
import JavaScriptIcon from "./icons/Javascript.astro";
import LaravelIcon from "./icons/Laravel.astro";
import MysqlIcon from "./icons/Mysql.astro";
import TailwindIcon from "./icons/Tailwind.astro";
import TypeScriptIcon from "./icons/Typescript.astro";
import WordpressIcon from "./icons/Wordpress.astro";
---

<div class="grid grid-cols-2 sm:grid-cols-4 gap-6 mt-0 justify-items-center">
  {[
    { component: HtmlIcon, name: "HTML" },
    { component: CSSIcon, name: "CSS" },
    { component: JavaScriptIcon, name: "JavaScript" },
    /* { component: TypeScriptIcon, name: "TypeScript" }, */
    { component: AngularIcon, name: "Angular" },
    /* { component: AstroIcon, name: "Astro" }, */
    /* { component: TailwindIcon, name: "TailwindCSS" },
    { component: BootstrapIcon, name: "Bootstrap" }, */
    { component: LaravelIcon, name: "Laravel" },
    /* { component: DotnetIcon, name: ".NET" }, */
    /* { component: NodejsIcon, name: "Node.js" }, */
    { component: GithubIcon, name: "GitHub" },
    { component: WordpressIcon, name: "WordPress" },
    { component: DockerIcon, name: "Docker" },
    { component: MysqlIcon, name: "MySQL" },
    /* { component: JavaIcon, name: "Java" } */
  ].map(({ component: TechIcon, name }) => (
    <div class="flex flex-col items-center text-center">
      <div class="bg-gray-200 dark:bg-gray-800 rounded-full p-2 flex items-center justify-center w-16 h-16 hover:scale-110 transition-transform">
        <TechIcon />
      </div>
      <span class="mt-2 text-sm font-medium">{name}</span>
    </div>
  ))}
</div>
